{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../",
    "allowJs": true,
    "types": ["jest", "node"],
    "paths": {
      "@datamint/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.spec.ts",
    "../**.d.ts",
    "global.teardown.js",
    "global.setup.js",
    "../src/types/global.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
