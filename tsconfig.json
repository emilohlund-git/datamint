{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "target": "ES2021",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "noLib": false,
    "baseUrl": ".",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "coverage",
  ]
}
